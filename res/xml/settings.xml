<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android"
   	android:defaultValue="false"
      >
    
	<ListPreference 
		android:key="@string/currConv_settings_KEY_UPDATE_INTERVAL"
        android:title="@string/currConv_settings_updateInterval_title"
        android:entries="@array/currConv_spinner_updatePeriod_labels"
        android:entryValues="@array/currConv_spinner_updatePeriod_values"
        android:dialogTitle="@string/currConv_settings_updateInterval_title"
        android:persistent="false"
        />
    
    <Preference 
        android:key="@string/currConv_settings_KEY_CLEAR_SETTINGS"
        android:title="@string/currConv_settings_clearSettings_title" 
        android:summary="@string/currConv_settings_clearSettings_summary"
        android:persistent="false"
		/>
    
     <Preference 
        android:key="@string/currConv_settings_KEY_SOFTWARE_VERSION"
        android:title="@string/currConv_settings_softwareVersion_title" 
        android:persistent="false"
		/>
    
</PreferenceScreen>
