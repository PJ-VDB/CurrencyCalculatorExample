<resources>

    <!-- The name of the application. -->
    <string name="app_name">Currency Converter</string>
    <!-- Settings label string -->
    <string name="action_settings">Settings</string>

    <!--
            The warning to give when the value supplied is using a cached value. 
   		Formatted string takes the date to display 
   		(preferably, yyyy-mm-dd hh:mm:ss form)
    -->
    <string name="currConv_cachedRate_warning" 
        >Warning: Using cached values (fetched %1$s). Results accuracy may vary.    </string>
    <!-- The formatted string to use for currency long-click actions. -->
    <string name="currConv_context_currencyAction">Action on "%1$s"</string>
    <!-- The spinner option for selectioning all -->
    <string name="currConv_spinner_dest_selectAll">View All</string>

    <!-- The label for the clipboard action performed -->
    <string name="currConv_clipboard_label_copiedCurrency">Copied Currency</string>
    <!-- String for the command to copy with multiple decimal places -->
    <string name="currConv_context_detailedCopy">Detailed copy</string>

    <!-- Start Long current names. -->
    <eat-comment />
    <!-- The name for USD -->
    <string name="currConv_USD_name">United States Dollar</string>
    <!-- The name for CAD -->
    <string name="currConv_CAD_name">Canadian Dollar</string>
    <!-- The name for EUR -->
    <string name="currConv_EUR_name">Euro</string>
    <!-- The name for GBP -->
    <string name="currConv_GBP_name">Great British Pound</string>
    <!-- The name for JPY -->
    <string name="currConv_JPY_name">Japanese Yen</string>

    <!-- End Long current names. -->
    <eat-comment />

    <!-- Start update periods -->
    <eat-comment />
    <!--
    The labels for the spinner of update times.
    Parallel to  currConv_spinner_updatePeriod_values
    -->
    <string-array name="currConv_spinner_updatePeriod_labels">
        <item>5 minutes</item>
        <item>15 minutes</item>
        <item>30 minutes</item>
        <item>1 hour</item>
        <item>2 hours</item>
        <item>6 hours</item>
        <item>12 hours</item>
        <item>24 hours</item>
        <item>2 days</item>
        <item>1 week</item>
    </string-array>



    <!-- Beginning settings block -->
    <eat-comment />

    <!-- The pref title app version -->
    <string name="currConv_settings_updateInterval_title">Update interval</string>

    <!-- The pref title for use json. -->
    <string name="currConv_settings_useJson_title">Use JSON updates </string>
    <!-- The pref summary for use json -->
    <string name="currConv_settings_useJson_summary">Uses the more compact JSON format for updates</string>

    <!-- The pref title for more apps from this dev. -->
    <string name="currConv_settings_moreApps_title">More apps </string>
    <!-- The pref summary for more apps from dev -->
    <string name="currConv_settings_moreApps_summary">See more apps from this developer</string>

    <!-- The pref title for clearin settings -->
    <string name="currConv_settings_clearSettings_title">Reset all settings</string>
    <!-- The pref description for clearing settings -->
    <string name="currConv_settings_clearSettings_summary">Set all settings to default values</string>
    <!-- The clearing settings confirmation message -->
    <string name="currConv_settings_clearSettings_confirmMsg">Are you sure you wish to reset ALL settings? 
        This cannot be undone.</string>

    <!-- Toast for when settings are cleared. -->
    <string name="currConv_toast_clearedSettings">Settings reset</string>

    <!-- The pref title app version -->
    <string name="currConv_settings_softwareVersion_title">Application version</string>

    <!-- Ends settings fragment strings -->
    <eat-comment />

</resources>
